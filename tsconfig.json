{
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "allowJs": true,

        "target": "es2017",
        "moduleResolution": "node",

        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,

        "jsx": "react",
        "esModuleInterop": true,
        //"allowSyntheticDefaultImports": true, // Set by esModuleInterop = true
    },

    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}
